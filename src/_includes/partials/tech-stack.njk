<section class="tech-stack">
  <div class="container">
    <h2>Tech Stack</h2>

    <div class="stack-category">
      <h3>Languages</h3>
      <div class="stack-grid">
        {% for item in techStack.languages %}
        <div class="stack-item stack-{{ item.level | lower }}">
          <span class="stack-icon">{{ item.icon }}</span>
          <span class="stack-name">{{ item.name }}</span>
          <span class="stack-level">{{ item.level }}</span>
        </div>
        {% endfor %}
      </div>
    </div>

    <div class="stack-category">
      <h3>Frameworks</h3>
      <div class="stack-grid">
        {% for item in techStack.frameworks %}
        <div class="stack-item stack-{{ item.level | lower }}">
          <span class="stack-icon">{{ item.icon }}</span>
          <span class="stack-name">{{ item.name }}</span>
          <span class="stack-level">{{ item.level }}</span>
        </div>
        {% endfor %}
      </div>
    </div>

    <div class="stack-category">
      <h3>Databases & Tools</h3>
      <div class="stack-grid">
        {% for item in techStack.databases %}
        <div class="stack-item stack-{{ item.level | lower }}">
          <span class="stack-icon">{{ item.icon }}</span>
          <span class="stack-name">{{ item.name }}</span>
          <span class="stack-level">{{ item.level }}</span>
        </div>
        {% endfor %}
        {% for item in techStack.tools %}
        <div class="stack-item stack-{{ item.level | lower }}">
          <span class="stack-icon">{{ item.icon }}</span>
          <span class="stack-name">{{ item.name }}</span>
          <span class="stack-level">{{ item.level }}</span>
        </div>
        {% endfor %}
      </div>
    </div>

    {% if techStack.interests %}
    <div class="stack-interests">
      <h3>Interests & Specializations</h3>
      <ul>
        {% for interest in techStack.interests %}
        <li>{{ interest }}</li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
  </div>
</section>
