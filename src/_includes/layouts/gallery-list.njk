---
layout: layouts/base.njk
---
{% block content %}
<section class="gallery-page">
  <header class="page-header">
    <h1 class="page-title">{{ title }}</h1>
    {% if description %}
    <p class="page-description">{{ description }}</p>
    {% endif %}
  </header>

  <div class="gallery-grid">
    {% set galleries = collections.gallery %}
    
    {% if galleries.length == 0 %}
    <p>Belum ada album foto.</p>
    {% else %}
    
    {% for gallery in galleries %}
    <article class="gallery-card">
      <a href="{{ gallery.url }}">
        {% if gallery.data.thumbnail %}
        <img src="{{ gallery.url }}{{ gallery.data.thumbnail }}" 
             alt="{{ gallery.data.title }}" 
             loading="lazy"
             class="gallery-thumbnail">
        {% endif %}
        <div class="gallery-info">
          <h2>{{ gallery.data.title }}</h2>
          <time datetime="{{ gallery.date | dateFormat('iso') }}">
            {{ gallery.date | dateFormat }}
          </time>
        </div>
      </a>
    </article>
    {% endfor %}
    
    {% endif %}
  </div>
</section>
{% endblock %}
