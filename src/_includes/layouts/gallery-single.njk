---
layout: layouts/base.njk
---
{% block content %}
<article class="gallery-single">
  <header class="gallery-header">
    <h1>{{ title }}</h1>
    <time datetime="{{ date | dateFormat('iso') }}">
      {{ date | dateFormat }}
    </time>
  </header>

  {% if description %}
  <p class="gallery-description">{{ description }}</p>
  {% endif %}

  <div class="gallery-content">
    {{ content | safe }}
  </div>

  {# If you have images array in front matter #}
  {% if photos and photos.length %}
  <div class="photo-grid">
    {% for photo in photos %}
    <figure class="photo-item">
      <a href="{{ page.url }}{{ photo.src }}" target="_blank">
        <img src="{{ page.url }}{{ photo.thumbnail or photo.src }}" 
             alt="{{ photo.alt or title }}" 
             loading="lazy">
      </a>
      {% if photo.caption %}
      <figcaption>{{ photo.caption }}</figcaption>
      {% endif %}
    </figure>
    {% endfor %}
  </div>
  {% endif %}
</article>
{% endblock %}

{% block scripts %}
<script>
// Simple lightbox functionality
document.querySelectorAll('.photo-grid a').forEach(link => {
  link.addEventListener('click', (e) => {
    // You can add lightbox library here
  });
});
</script>
{% endblock %}
