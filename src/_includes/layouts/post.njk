---
layout: layouts/base.njk
---
{% block ogType %}article{% endblock %}

<!-- Structured Data for SEO -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "{{ title | escape }}",
  "description": "{{ description | escape }}",
  "image": "{% if images and images.length %}{{ site.url }}{{ images[0] }}{% else %}{{ site.url }}/assets/images/og-default.jpg{% endif %}",
  "author": {
    "@type": "Person",
    "name": "{{ site.author.name }}",
    "url": "{{ site.url }}"
  },
  "publisher": {
    "@type": "Organization",
    "name": "{{ site.author.name }}",
    "url": "{{ site.url }}"
  },
  "datePublished": "{{ date | dateFormat('iso') }}",
  "dateModified": "{% if lastmod %}{{ lastmod | dateFormat('iso') }}{% else %}{{ date | dateFormat('iso') }}{% endif %}",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ site.url }}{{ page.url }}"
  },
  "wordCount": "{{ content | strip_html | split: ' ' | length }}",
  "keywords": "{% if tags %}{{ tags | join(', ') }}{% endif %}"
}
</script>

{% block content %}
<article class="post h-entry">
  <header class="post-header">
    <h1 class="post-title p-name">{{ title }}</h1>
    
    <div class="post-meta">
      <time class="dt-published" datetime="{{ date | dateFormat('iso') }}">
        {{ date | dateFormat }}
      </time>
      
      {% if lastmod %}
      <span class="post-updated">
        (diperbarui: <time datetime="{{ lastmod | dateFormat('iso') }}">{{ lastmod | dateFormat('short') }}</time>)
      </span>
      {% endif %}
      
      <span class="reading-time">{{ content | readingTime }}</span>
    </div>
    
    {% if tags and tags.length %}
    <div class="post-tags">
      {% for tag in tags %}
        {% if tag != "posts" and tag != "writing" %}
        <a href="/tags/{{ tag | slugify }}/" class="tag p-category">#{{ tag }}</a>
        {% endif %}
      {% endfor %}
    </div>
    {% endif %}
  </header>

  {% if toc %}
  <nav class="table-of-contents">
    <h2>Daftar Isi</h2>
    {{ content | toc | safe }}
  </nav>
  {% endif %}

  <div class="post-content e-content">
    {{ content | safe }}
  </div>

  <footer class="post-footer">
    {% if author %}
    <p class="post-author p-author h-card">
      Ditulis oleh <span class="p-name">{{ author }}</span>
    </p>
    {% endif %}
  </footer>
</article>

{% if comments %}
{% include "partials/comments.njk" %}
{% endif %}
{% endblock %}
