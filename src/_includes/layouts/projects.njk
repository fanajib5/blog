---
layout: layouts/base.njk
---

{% block content %}
<div class="projects-page">
  <header class="page-header">
    <h1 class="page-title">{{ title }}</h1>
    {% if description %}
    <p class="page-description">{{ description }}</p>
    {% endif %}
  </header>

  <div class="page-content">
    {{ content | safe }}
  </div>

  <div class="projects-list">
    {% set allProjects = projects | sort(attribute="order") %}
    {% for project in allProjects %}
    <article class="project-detail">
      <div class="project-detail-header">
        <h2>{{ project.title }}</h2>
        <span class="project-role">{{ project.role }}</span>
      </div>

      <p class="project-description">{{ project.description }}</p>

      {% if project.problem %}
      <div class="project-section">
        <h3>Problem</h3>
        <p>{{ project.problem }}</p>
      </div>
      {% endif %}

      {% if project.solution %}
      <div class="project-section">
        <h3>Solution</h3>
        <p>{{ project.solution }}</p>
      </div>
      {% endif %}

      <div class="project-tech">
        <h3>Tech Stack</h3>
        <div class="tech-badges">
          {% for tech in project.techStack %}
          <span class="tech-badge">{{ tech }}</span>
          {% endfor %}
        </div>
      </div>

      {% if project.challenges %}
      <div class="project-section">
        <h3>Key Challenges</h3>
        <ul class="challenges-list">
          {% for challenge in project.challenges %}
          <li>{{ challenge }}</li>
          {% endfor %}
        </ul>
      </div>
      {% endif %}

      <div class="project-links">
        {% if project.links.demo %}
        <a href="{{ project.links.demo }}" class="project-link" target="_blank" rel="noopener">
          <span>ðŸ”—</span> Live Demo
        </a>
        {% endif %}
        {% if project.links.github %}
        <a href="{{ project.links.github }}" class="project-link" target="_blank" rel="noopener">
          <span>ðŸ’»</span> GitHub
        </a>
        {% endif %}
        {% if project.links.caseStudy %}
        <a href="{{ project.links.caseStudy }}" class="project-link">
          <span>ðŸ“–</span> Case Study
        </a>
        {% endif %}
      </div>
    </article>
    {% endfor %}
  </div>
</div>
{% endblock %}
