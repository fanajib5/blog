<!DOCTYPE html>
<html lang="{{ site.language }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}{{ title }} | {{ site.title }}{% endblock %}</title>
  
  <meta name="description" content="{{ description or site.description }}">
  <meta name="author" content="{{ site.author.name }}">
  
  <!-- Open Graph -->
  <meta property="og:title" content="{{ title or site.title }}">
  <meta property="og:description" content="{{ description or site.description }}">
  <meta property="og:type" content="{% block ogType %}website{% endblock %}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  {% if images and images.length %}
  <meta property="og:image" content="{{ site.url }}{{ images[0] }}">
  {% endif %}
  
  <!-- Styles -->
  <link rel="stylesheet" href="/assets/css/style.css">
  
  <!-- RSS -->
  <link rel="alternate" type="application/rss+xml" title="{{ site.title }}" href="/feed.xml">
  
  {% block head %}{% endblock %}
</head>
<body>
  <header class="site-header">
    <div class="container">
      <a href="/" class="site-title">{{ site.title }}</a>
      
      <nav class="main-nav">
        <ul>
          {% for item in site.menu | sort(false, false, 'weight') %}
          <li>
            <a href="{{ item.url }}" 
               {% if page.url == item.url %}aria-current="page"{% endif %}
               title="{{ item.description }}">
              {{ item.name }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </nav>
    </div>
  </header>

  <main class="site-main">
    <div class="container">
      {% block content %}
        {{ content | safe }}
      {% endblock %}
    </div>
  </main>

  <footer class="site-footer">
    <div class="container">
      <p>&copy; {{ site.author.name }}. {{ site.copyright }}</p>
    </div>
  </footer>

  {% block scripts %}{% endblock %}
</body>
</html>
